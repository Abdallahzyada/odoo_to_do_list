<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="assign_task_wizard_view_form" model="ir.ui.view">
        <field name="name">Assign Task Wizard From</field>
        <field name="model">assign.task</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="task_id" invisible="1"/>
                    <field name="assign_to_id"/>
                </group>
                <footer>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                    <button string="OK" type="object" name="check_action" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="assign_task_wizard_action" model="ir.actions.act_window">
        <field name="name">Assign Tasks</field>
        <field name="res_model">assign.task</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>